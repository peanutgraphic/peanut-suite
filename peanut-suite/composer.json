{
    "name": "peanut-graphic/peanut-suite",
    "description": "WordPress plugin for managing clients, sites, and billing",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0"
    },
    "autoload": {
        "classmap": [
            "core/",
            "modules/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite unit",
        "test:integration": "phpunit --testsuite integration"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
