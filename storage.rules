rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper to check if user owns the resource
    function isOwner(peanutId) {
      return request.auth != null && request.auth.token.peanut_id == peanutId;
    }

    // Avatar images
    match /avatars/{peanutId}/{fileName} {
      // Anyone can read avatars
      allow read: if true;
      // Only owner can write
      allow write: if isOwner(peanutId)
        && request.resource.size < 5 * 1024 * 1024  // 5MB max
        && request.resource.contentType.matches('image/.*');
    }

    // Performer media (photos, videos)
    match /performers/{performerId}/{fileName} {
      // Anyone can read performer media
      allow read: if true;
      // Only performer owner can write (need to verify ownership via Firestore)
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024  // 50MB max for videos
        && (request.resource.contentType.matches('image/.*')
            || request.resource.contentType.matches('video/.*'));
    }

    // Venue images
    match /venues/{venueId}/{fileName} {
      // Anyone can read venue images
      allow read: if true;
      // Authenticated users can upload
      allow write: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024  // 10MB max
        && request.resource.contentType.matches('image/.*');
    }

    // Recordings (Notebook audio/video)
    match /recordings/{peanutId}/{fileName} {
      // Only owner can read/write recordings
      allow read, write: if isOwner(peanutId)
        && request.resource.size < 100 * 1024 * 1024;  // 100MB max
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
